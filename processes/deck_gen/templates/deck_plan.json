{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Deck",
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "deck_meta": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "title": { "type": "string" },
          "author": { "type": "string" },
          "date":   { "type": "string" },
          "brand":  { "type": "string" }
        },
        "required": ["title"]
      },
      "deck_slides": {
        "type": "array",
        "minItems": 1,
        "items": { "$ref": "#/$defs/Slide" }
      }
    },
    "required": ["deck_slides"],
    "$defs": {
      "Slide": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "slide_type": {
            "type": "string",
            "enum": [
              "title_slide",
              "title_bullets",
              "image_right_content_left",
              "image_left_content_right",
              "big_text",
              "blank"
            ]
          },
          "title":   { "type": "string", "maxLength": 80 },
          "body":    { "type": "string", "maxLength": 1000 },
          "bullets": {
            "type": "array",
            "items": { "type": "string", "maxLength": 140 },
            "minItems": 1,
            "maxItems": 5
          },
          "image": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "path": { "type": "string" },
              "url":  { "type": "string" },
              "alt":  { "type": "string" }
            }
          },
          "notes":   { "type": "string", "maxLength": 1000 }
        },
        "required": ["slide_type"],
        "allOf": [
          { "if": { "properties": { "slide_type": { "const": "title_slide" } } },
            "then": { "required": ["title"] } },
          { "if": { "properties": { "slide_type": { "const": "title_bullets" } } },
            "then": { "required": ["title", "bullets"] } },
          { "if": { "properties": { "slide_type": { "const": "image_right_content_left" } } },
            "then": { "required": ["title", "bullets", "image"] } },
          { "if": { "properties": { "slide_type": { "const": "image_left_content_right" } } },
            "then": { "required": ["title", "bullets", "image"] } },
          { "if": { "properties": { "slide_type": { "const": "big_text" } } },
            "then": { "required": ["title"] } }
        ]
      }
    }
  }
  